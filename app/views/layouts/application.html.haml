    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title ELearning
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
