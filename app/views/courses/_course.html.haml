- @courses.each do |course|
    .card
        .card-header
            .fa.fa-book
            = link_to course.title, course_path(course)
        .card-dody
            =course.description
        .card-footer
            .far.fa-clock
            .fa.fa-globe-africa
            = course.language
            .fa.fa-signal
            = course.level
        .card-footer
            .text-center
            = number_to_currency(course.price)
        .card-footer
            .far.fa-clock
            = course.created_at
        .card-footer
            = link_to 'Show', course, class: "btn btn-sm btn-primary"
            = link_to 'Edit', edit_course_path(course), class: "btn btn-sm btn-warning"
            = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger"